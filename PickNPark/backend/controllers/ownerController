exports.isOwner = async (req, res) => {
    const { user } = req.body;

    try {
        // Check if the user is an owner
        const check = await Owner.findOne({ userId: user._id });
        if (!check) {
            return res.status(403).json({ message: 'not a user' });
        }


        const owner = await Owner.find({ userId: user._id, owner: true });
        if (!owner) {
            return res.status(200).json({ message: 'User is not an owner' });
        }

        // If the user is an owner, proceed with the request
        res.status(200).json({ message: 'User is an owner', owner });
    } catch (error) {
        console.error('Error in loginUser:', error);
        res.status(500).json({ message: 'Server error' });
    }
};